# =============================================================================
# CORS Configuration
# =============================================================================
# List of allowed origins (JSON array format)
# Development example:
FDA_CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:8000"]
# Production example:
# FDA_CORS_ALLOW_ORIGINS=["https://app.example.com"]
# All origins (NOT recommended with credentials):
# FDA_CORS_ALLOW_ORIGINS=["*"]

# Optional regex pattern for origins
# FDA_CORS_ALLOW_ORIGIN_REGEX=https://.*\.example\.com

# Allowed HTTP methods
FDA_CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]

# Allowed request headers (["*"] for all headers)
FDA_CORS_ALLOW_HEADERS=["*"]

# Enable credentials (cookies, authorization headers)
# WARNING: If true, ALLOW_ORIGINS cannot be ["*"]
FDA_CORS_ALLOW_CREDENTIALS=false

# Exposed response headers (optional)
# FDA_CORS_EXPOSE_HEADERS=["X-Total-Count","X-Request-ID"]

# Preflight cache max age in seconds
FDA_CORS_MAX_AGE=600

# =============================================================================
# Database Configuration
# =============================================================================
FDA_DB_HOST=localhost
FDA_DB_PORT=5432
FDA_DB_USER=user
FDA_DB_PASSWORD=password
FDA_DB_DBNAME=funding_db
